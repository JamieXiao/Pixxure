{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "pixxure-ctest",

  "permissions": {
    "redis": true
  },

  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },

  "server": {
    "dir": "dist/server",
    "entry": "main.cjs"
  },

  "media": {},

  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "pixxure",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },

  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },

  "jobs": {
    "seed-daily-challenge": {
      "cron": "0 0 * * *",
      "endpoint": "/internal/jobs/seed-daily-challenge"
    }
  },


  "settings": {
    "global": {
      "SUPABASE_URL": {
        "type": "string",
        "label": "Supabase Project URL",
        "defaultValue": ""
      },
      "SUPABASE_ANON_KEY": {
        "type": "string",
        "label": "Supabase Anonymous Key",
        "defaultValue": "",
        "isSecret": true
      },
      "SUPABASE_SERVICE_ROLE": {
        "type": "string",
        "label": "Supabase Service Role Key",
        "defaultValue": "",
        "isSecret": true
      }
    }
  },

  "dev": {
    "subreddit": "pixxure_ctest_dev"
  }
}
